---
export interface Props {
  title: string;
  company: string;
  date: string;
  description: string;
  isLast?: boolean;
}
const { title, company, date, description, isLast } = Astro.props;
---

<div class="flex items-center">
  <!-- Marcador -->
  <div
    class="relative flex items-center justify-center w-8 h-8 bg-green-50 dark:bg-green-900 rounded-full ring-2 ring-green-300 dark:ring-green-600 shrink-0"
  >
    <!-- Punto interior -->
    <div class="w-3 h-3 bg-green-600 dark:bg-green-300 rounded-full"></div>
  </div>

  <!-- Línea de conexión -->
  {
    !isLast && (
      <div class="hidden sm:flex w-full bg-green-200 dark:bg-green-700 h-0.5" />
    )
  }
</div>

<!-- Contenido de la experiencia -->
<div class="mt-3 sm:pe-8">
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
    {title} | {company}
  </h3>
  <time
    class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >{date}</time
  >
  <p class="text-base font-normal text-gray-500 dark:text-gray-400">
    {description}
  </p>
</div>
