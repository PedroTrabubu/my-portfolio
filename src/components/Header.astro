---
import ThemeTogle from "./ThemeTogle.astro";
---

<header>
  <nav
    class="fixed top-0 left-0 w-full bg-white/70 dark:bg-gray-950/70 backdrop-blur-lg shadow-sm z-50"
  >
    <div
      class="max-w-6xl mx-auto flex justify-between items-center px-4 py-4 flex-wrap md:flex-nowrap"
    >
      <!-- Logo + Nombre + Theme -->
      <div
        class="flex items-center gap-1 font-bold text-green-600 dark:text-green-300 text-xl flex-wrap md:flex-nowrap"
      >
        <a href="/" class="inline-block">
          <img
            src="/svgviewer-output.svg"
            alt="Logo claro"
            class="w-8 h-8 block dark:hidden"
          />
          <img
            src="/codetechwhite.svg"
            alt="Logo oscuro"
            class="w-8 h-8 hidden dark:block"
          />
        </a>

        <span>PedroBlanquer</span>
        <span class="text-gray-900 dark:text-white">.setColor</span>
        <span>(</span>
        <div class="relative ml-1 mr-1 flex-shrink-0 z-[60]">
          <ThemeTogle />
        </div>
        <span>)</span>
      </div>

      <!-- Botón hamburguesa (solo en móvil) -->
      <button
        id="menu-btn"
        class="md:hidden text-gray-700 dark:text-gray-200 focus:outline-none transition-transform hover:scale-110"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-7 h-7"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m0 6H4"></path>
        </svg>
      </button>

      <!-- Menú de navegación -->
      <ul
        id="menu"
        class="hidden md:flex flex-col md:flex-row gap-4 md:gap-6 text-base font-medium text-gray-700 dark:text-gray-300 absolute md:static top-full left-0 w-full md:w-auto bg-white/90 dark:bg-gray-950/90 md:bg-transparent p-4 md:p-0 transition-all duration-300 ease-in-out"
      >
        <li>
          <a href="#idiomas" class="hover:text-green-600">Idiomas</a>
        </li>
        <li>
          <a href="#tecnologias" class="hover:text-green-600">Tecnologías</a>
        </li>
        <li>
          <a href="#proyectos" class="hover:text-green-600">Proyectos</a>
        </li>
        <li>
          <a href="#experiencia" class="hover:text-green-600">Experiencia</a>
        </li>
        <li>
          <a href="#sobre-mi" class="hover:text-green-600">Sobre mí</a>
        </li>
        <li><a href="#contact" class="hover:text-green-600">Contáctame</a></li>
      </ul>
    </div>
  </nav>
</header>

<!-- Script para abrir/cerrar el menú -->
<script>
  const menuBtn = document.getElementById("menu-btn");
  const menu = document.getElementById("menu");

  menuBtn.addEventListener("click", () => {
    menu.classList.toggle("hidden");
    // Animación suave de aparición
    if (!menu.classList.contains("hidden")) {
      menu.classList.add("opacity-100", "translate-y-0");
      menu.classList.remove("opacity-0", "-translate-y-2");
    } else {
      menu.classList.add("opacity-0", "-translate-y-2");
      menu.classList.remove("opacity-100", "translate-y-0");
    }
  });

  // Cierra el menú al hacer clic fuera
  document.addEventListener("click", (e) => {
    if (!menu.contains(e.target) && !menuBtn.contains(e.target)) {
      menu.classList.add("hidden");
    }
  });
</script>
