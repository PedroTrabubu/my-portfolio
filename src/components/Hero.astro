---
import Badge from "./Badge.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import Gmail from "../icons/Gmail.astro";
---

<div
  class="min-h-screen flex items-center justify-center px-6 pt-32 pb-16 dark:bg-gray-950"
>
  <div
    class="flex flex-col md:flex-row items-center md:items-start max-w-6xl w-full gap-12 relative"
  >
    <!-- Imagen a la izquierda -->
    <div
      class="relative flex-shrink-0 md:w-1/3 flex justify-center md:justify-start"
    >
      <img
        class="rounded-full shadow-2xl w-56 h-56 md:w-72 md:h-72 object-cover border-4 border-green-500/50"
        src="/yo carnet paris_resultado_resultado2_resultado2.webp"
        alt="Foto de Pedro Blanquer"
      />
      <Badge class="absolute top-0 left-1/2 -translate-x-1/2 mt-4"
        >Disponible para trabajar</Badge
      >
    </div>

    <!-- Texto a la derecha -->
    <div class="md:w-2/3 text-center md:text-left">
      <h1
        class="text-4xl md:text-5xl font-bold tracking-tight text-gray-900 dark:text-white flex items-center gap-3"
      >
        ¡Hola! Soy <span class="text-green-600 dark:text-green-300"
          >Pedro Blanquer</span
        >
      </h1>

      <p
        class="mt-6 text-lg md:text-xl text-gray-700 dark:text-gray-300 leading-relaxed"
      >
        <strong class="text-green-600 dark:text-green-300"
          >Desarrollador Full Stack Junior</strong
        >
        con formación en <strong>Trabajo Social</strong> y pasión por la tecnología.
        Hace tres años decidí reinventarme y orientar mi carrera hacia el <strong
          >desarrollo web</strong
        >. Soy <strong>trilingüe</strong> — Español, Inglés y Francés — y combino
        mi visión humana con habilidades técnicas para crear experiencias digitales
        centradas en las personas.
      </p>

      <ul class="flex flex-wrap justify-center md:justify-start gap-4 mt-10">
        <li>
          <a
            href="https://www.linkedin.com/in/pedro-blanquer-cerro-b3b71a350/"
            target="_blank"
            class="inline-flex items-center gap-2 px-6 py-2.5 bg-green-600 text-white rounded-full font-medium hover:bg-green-700 transition shadow-sm hover:shadow-md"
          >
            <LinkedInIcon class="w-5 h-5 fill-white" />
            <span>LinkedIn</span>
          </a>
        </li>
        <li>
          <a
            href="mailto:pedro.blanquer.cerro@gmail.com"
            class="inline-flex items-center gap-2 px-6 py-2.5 border border-green-600 text-green-600 dark:text-green-300 dark:border-green-300 rounded-full font-medium hover:bg-green-50 dark:hover:bg-green-900/30 transition shadow-sm hover:shadow-md"
          >
            <Gmail class="w-5 h-5 text-green-600 dark:text-green-300" />
            <span>Contáctame</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
